<Window x:Class="KiddEsports.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KiddEsports"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="5*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <DataGrid x:Name="dgvTeamList" Grid.Row="1" Margin="10" 
                  IsReadOnly="True" SelectionChanged="dgvTeamList_SelectionChanged"/>

        <StackPanel Grid.Column="1" Grid.RowSpan="2" Margin="10">
            <!--This label is applying the style oputlined above using the 'InputLabel' Key-->
            <Label Style="{StaticResource InputLabel}">Team Name:</Label>
            <TextBox x:Name="txtTeamName"/>
            <Label Style="{StaticResource InputLabel}">Primary Contact:</Label>
            <TextBox x:Name="txtPrimaryContact"/>
            <Label Style="{StaticResource InputLabel}">Contact Phone Number:</Label>
            <TextBox x:Name="txtPhoneNo"/>
            <Label Style="{StaticResource InputLabel}">Contact Email:</Label>
            <TextBox x:Name="txtEmail"/>
            <Label Style="{StaticResource InputLabel}">Compition Points:</Label>
            <TextBox x:Name="txtCompPoints"/>
            <Button x:Name="btnSave" Click="btnSave_Click" >Add to Addressbook</Button>
        </StackPanel>
    </Grid>
</Window>
